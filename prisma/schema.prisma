generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum accountType {
  user
  admin
}

model User {
  id          String      @id @unique @default(uuid())
  username    String
  email       String      @unique
  password    String
  accountType accountType @default(user)

  createdAt DateTime @default(now())
  updaredAt DateTime @updatedAt
  otp       Otp[]
  profile   Profile?

  @@map("users")
}

model Otp {
  id     String @id @unique @default(uuid())
  token  String
  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@map("otps")
}

model Profile {
  id          String @id @unique @default(uuid())
  name        String
  address     String
  phone       String
  countryCode String
  country     String
  state     String
  userId      String @unique
  user        User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updaredAt DateTime @updatedAt

  @@map("profiles")
}
